<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="0dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#3F808080">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical" >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_pic_post"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_user_black" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/username_post_TextView"
                    android:text="username"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:autoSizeMaxTextSize="18dp"
                    android:autoSizeMinTextSize="10dp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform"/>
                <TextView
                    android:text=" â€¢ "
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/time_post"
                    android:text="time"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="13dp"
                    android:autoSizeMinTextSize="7dp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:maxLines="1"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/moreButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_more_black"
                android:background="@color/transparent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/post_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="post content..."
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:autoLink="all"/>
                <ImageView
                    android:id="@+id/post_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom">
                <ImageView
                    android:id="@+id/likeButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_like_black"
                    android:background="@color/transparent"
                    android:layout_marginBottom="10dp"/>
                <ImageView
                    android:id="@+id/commentButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_comment_black"
                    android:background="@color/transparent"
                    android:layout_marginBottom="10dp"/>
                <ImageView
                    android:id="@+id/saveButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_save_black"
                    android:background="@color/transparent"
                    android:layout_marginBottom="10dp"/>
                <ImageView
                    android:id="@+id/addToPlanButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_add_to_plan_black"
                    android:background="@color/transparent"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>